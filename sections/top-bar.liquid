<div class="top-bar color-{{ section.settings.color_scheme }} primary-font-family">
  <div class="top-bar__container page-width">
    <div class="top-bar__left">
      <a href="mailto: {{ section.settings.email }}" class="top-bar-link top-bar__left__email">
        {% render 'icon-set'
          , icon: 'email' %}
        <span class="top-bar-link__span">{{ section.settings.email -}}</span>
      </a>
      <a href="tel: {{ section.settings.number }}" class="top-bar-link top-bar__left__number">
        {% render 'icon-set'
          , icon: 'call' %}
        <span class="top-bar-link__span">{{ section.settings.number -}}</span>
      </a>
    </div>
    <div class="top-bar__right">
      <p class="top-bar__right--working_hours">
        {{ section.settings.start_working_hour -}}AM - {{ section.settings.end_working_hour -}}PM
      </p>
    </div>
  </div>
</div>

<style>
  .top-bar {
    background-color: var(--color-secondary-background);
    color: var(--color-light-text);
  }
  .top-bar__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 8px;
    font-size: 14px;
  }
  .top-bar__left {
    display: flex;
    gap: 48px;
  }
  .top-bar-link {
    text-decoration: none;
    color: var(--color-light-text);
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .top-bar-link svg {
    width: 20px;
    height: 20px;
  }
  .top-bar__right--working_hours {
    margin: 0;
  }
  @media screen and (max-width: 650.1px) {
    .top-bar-link__span {
      display: none;
    }
    .top-bar__left {
      gap: 24px;
    }
  }
  @media screen and (max-width: 425.1px) {
    .top-bar__container {
      padding-block: 5px;
      font-size: 12px;
    }
  }

</style>
{% schema %}
  {
    "name": "Top bar",
    "class": "top-bar-section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-6"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email",
        "default": "mhhasanul@gmail.com"
      },
      {
        "type": "text",
        "id": "number",
        "label": "Phone number",
        "default": "(12345) 6-78-90"
      },
      {
        "type": "text",
        "id": "start_working_hour",
        "label": "Working hours start",
        "default": "9:00"
      }, {
        "type": "text",
        "id": "end_working_hour",
        "label": "Working hours end",
        "default": "9:00"
      }
    ]
  }
{% endschema %}