{{ 'featured-products-slider.min.css' | asset_url | stylesheet_tag }}
{{ 'featured-products-slider.min.js' | asset_url | script_tag }}

<div class='featured-products-collection'>
  <div class='page-width'>
    <h2 class='collection-title'>{{ section.settings.title }}</h2>
    <div class='featured-products__slider swiper'>
      <div class='featured-products__slider--wrapper swiper-wrapper'>
        {% for product in section.settings.collection.products %}
          {% render 'featured-products', product: product %}
        {% endfor %}
      </div>
      <div class='featured-products__slider--pagination swiper-pagination'></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection  "
    }
  ],
  "presets": [
    {
      "name": "Featured Products Slider"
    }
  ]
}
{% endschema %}
